<?xml version = "1.0" encoding = "UTF-8"?>

<!--        https://stackify.com/log4j2-java/-->

<configuration>
    <appender name = "STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>
    </appender>

    <appender name = "FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/tmp/var/mylog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/tmp/var/logs/mylog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

    </appender>

    <appender name = "TOMFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/tmp/var/mytomlog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/tmp/var/logs/mytomlog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>

    </appender>

    <root level="OFF" additivity="false">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name = "org.springframework" level="OFF" additivity = "false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name = "com.tjclawson.javazoos" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.apache.tomcat" level = "TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="TOMFILE"/>
    </logger>

    <logger name="org.apache.coyote" level = "TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="TOMFILE"/>
    </logger>

    <logger name="org.apache.catalina" level = "TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="TOMFILE"/>
    </logger>

</configuration>